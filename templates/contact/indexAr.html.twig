                </div>
                <div class="col-lg-6 col-md-12 order-2 order-lg-1">
                    <div class="contact-form-content text-right">
                        <h3 class="contact-page-title">أخبرنا رسالتك</h3>
                        <div class="contact-form">
                            {{ form_start(form) }}
                            {% for message in app.flashes('success')  %}
                                <div class="alert alert-success">
                                    {{ message }}
                                </div>
                            {% endfor %}
                            <div class="form-group">
                                <label>اسمك <span class="required">*</span></label>
                                {{ form_row(form.name) }}
                            </div>
                            <div class="form-group">
                                <label>بريدك الالكتروني <span class="required">*</span></label>
                                {{ form_row(form.email) }}
                            </div>
                            <div class="form-group">
                                <label>موضوع</label>
                                {{ form_row(form.subject) }}
                            </div>
                            <div class="form-group form-group-2">
                                <label>رسالتك</label>
                                {{ form_row(form.message) }}
                            </div>
                            <div class="form-group">
                                <button type="submit" value="submit" id="submit" class="alsita-contact-form_btn" name="submit">إرسال</button>
                            </div>
                            {{ form_end(form) }}
                        </div>
                        <p class="form-messege"></p>
                    </div>
                </div>
