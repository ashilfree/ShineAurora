{% extends 'baseAr.html.twig' %}
{% block title %}Home{% endblock %}
{% block body %}

    {% include 'home/slidesAr.html.twig' %}
<!-- Begin Shine Aurora Product Area -->
<div class="hiraola-product_area section-space_add">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="hiraola-section_title text-right">
                    <h4>منتجات جديدة</h4>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="tab-content hiraola-tab_content">
                    <div id="necklaces-1" class="tab-pane active show" role="tabpanel">
                        <div class="hiraola-product-tab_slider-3" dir="rtl">
                            {% for product in products %}
                                {% if product.isNew %}
                                    {% include 'home/_productAr.html.twig' %}
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Shine Aurora Product Area End Here -->

    {% include 'home/discount-bannerAr.html.twig' %}

    <!-- Begin Shine Aurora Product Tab Area -->
    <div class="hiraola-product-tab_area-2">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="hiraola-tab_title">
                        <h4>المنتجات</h4>
                    </div>
                    <div class="product-tab">

                        <ul class="nav product-menu">
                            {% for category in categories %}
                                {% if category.products.getValues() is not empty %}
                                    <li><a {% if loop.index == 1%} class="active" {% endif %} data-toggle="tab" href="#{{ category.name }}"><span>{{ category.nameAr }}</span></a></li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="tab-content hiraola-tab_content">
                        {% for category in categories %}
                            {% if category.products.getValues() is not empty %}
                                <div id="{{ category.name }}" class="tab-pane {% if loop.index == 1%} active show {% endif %}" role="tabpanel">
                                    <div class="hiraola-product-tab_slider-3 hiraola-product-tab_second-slider-3">
                                        {% for product in category.products %}
                                            {% if product.isShow %}
                                                {% include 'home/_productAr.html.twig' %}
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
