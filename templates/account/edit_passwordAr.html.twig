{% extends 'baseAr.html.twig' %}

{% block body %}

    {% include '_banner.html.twig' %}
    <div style="padding-top: 60px">
        <div class="container">
            <div>
                <ul>
                    <li class="text-center" style="color: #595959;font-size: 25px;"><a href="{{ path('home', { locale: 'ar' }) }}">الصفحة الرئيسية</a> / حسابي</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- Begin Hiraola's About Us Area -->
    <!-- Begin Hiraola's Page Content Area -->
    <main class="page-content">
        <!-- Begin Hiraola's Account Page Area -->
        <div class="account-page-area">
            <div class="container">
                <div class="row">
                    {% include 'account/side_barAr.html.twig' %}
                    <div class="col-lg-9">
                        <div class="tab-content myaccount-tab-content text-right" id="account-page-tab-content">
                            <div class="tab-pane fade show active" >
                                <div class="myaccount-details">
                                    {{ form_start(form, {'attr': {'class': 'hiraola-form'}}) }}
                                    <div class="hiraola-form-inner">
                                        <div class="single-input">
                                            <label for="account-details-firstname">كلمة سر قديمة *</label>
                                            {{ form_row(form.old_password) }}
                                        </div>
                                        <div class="single-input">
                                            <label for="account-details-lastname">كلمة السر الجديدة *</label>
                                            {{ form_row(form.new_password.first) }}
                                        </div>
                                        <div class="single-input">
                                            <label for="account-details-email">تأكيد كلمة المرور الجديدة *</label>
                                            {{ form_row(form.new_password.second) }}
                                        </div>
                                        <div class="single-input">
                                            <button class="hiraola-btn hiraola-btn_dark" type="submit"><span>حفظ التغييرات</span></button>
                                        </div>
                                        <div class="single-input">
                                            <a href="{{ path('account', { locale: 'en' }) }}" class="hiraola-btn hiraola-btn_dark" ><span>عودة
                                                </span></a>
                                        </div>
                                    </div>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Hiraola's Account Page Area End Here -->
    </main>
    <!-- Hiraola's Page Content Area End Here -->

{% endblock %}