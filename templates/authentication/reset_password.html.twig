{% extends 'base.html.twig' %}

{% block body %}

    <!-- Begin Shine AuroraBreadcrumb Area -->
    <div class="breadcrumb-area">
        <div class="container">
            <div class="breadcrumb-content">
                <h2>Other</h2>
                <ul>
                    <li><a href="{{ path('home', { locale: 'en' }) }}">Home</a></li>
                    <li class="active">Login & Register</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- Shine AuroraBreadcrumb Area End Here -->
    <!-- Begin Shine AuroraLogin Register Area -->
    <div class="hiraola-login-register_area">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-xs-12 col-lg-8 offset-2">
                    {{ form_start(requestForm) }}
                        <div class="login-form">
                            <h4 class="login-title">Reset Password</h4>
                            <div class="row">
                                <div class="col-md-12 col-12">
                                    <label>Email Address*</label>
                                    {{ form_row(requestForm.email, {'attr': {'class': 'form-control', 'placeholder':'Enter Your Email'}}) }}
                                </div>
                                <div class="col-md-12">
                                    <button type="submit" class="hiraola-login_btn">Login</button>
                                </div>
                            </div>
                        </div>
                    {{ form_end(requestForm) }}
                </div>
            </div>
        </div>
    </div>
    <!-- Shine AuroraLogin Register Area  End Here -->


{% endblock %}

