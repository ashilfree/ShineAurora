{% extends 'base.html.twig' %}

{% block body %}

    <!-- Begin Shine AuroraBreadcrumb Area -->
    <div class="breadcrumb-area" style="background-image: url({{ vich_uploader_asset(banner, 'imageFile') | imagine_filter('Extra_large') }});background-repeat:no-repeat;background-position:center;">
        <div class="container">
{#            <div class="breadcrumb-content">#}
{#                <h2>Login & Register</h2>#}
{#                <ul>#}
{#                    <li><a href="{{ path('home', { locale: 'en' }) }}">Home</a></li>#}
{#                    <li class="active">Login</li>#}
{#                </ul>#}
{#            </div>#}
        </div>
    </div>
    <!-- Shine AuroraBreadcrumb Area End Here -->
    <div style="padding-top: 60px">
        <div class="container">
            <div>
                <ul>
                    <li class="text-center" style="color: #595959;font-size: 25px;"><a href="{{ path('home', { locale: 'en' }) }}">Home</a> / Login</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- Begin Shine AuroraLogin Register Area -->
    <div class="hiraola-login-register_area">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-xs-12 col-lg-8 offset-lg-2">
                    <!-- Login Form s-->
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.message | trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}
                    <form action="{{ path('login', { locale: 'en'}) }}"  method="post">
                        <div class="login-form">
                            <h4 class="login-title">Login</h4>
                            <div class="row">
                                <div class="col-md-12 col-12">
                                    <label>Email Address*</label>
                                    <input type="email" placeholder="Email Address" name="_username" value="{{ last_username }}">
                                </div>
                                <div class="col-12 mb--20">
                                    <label>Password</label>
                                    <input type="password" placeholder="Password" name="_password">
                                </div>
                                <div class="col-md-8">
                                    <div class="forgotton-password_info">
                                        <a href="{{ path('register', { locale: 'en'}) }}"> Create Account...</a>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="forgotton-password_info">
                                        <a href="{{ path('app_forgot_password_request', { locale: 'en'}) }}"> Forgotten password?</a>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <button type="submit" class="hiraola-login_btn">Login</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Shine AuroraLogin Register Area  End Here -->


{% endblock %}

