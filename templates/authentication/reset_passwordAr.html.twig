{% extends 'baseAr.html.twig' %}

{% block body %}

    {% include '_banner.html.twig' %}
    <div style="padding-top: 60px">
        <div class="container">
            <div>
                <ul>
                    <li class="text-center" style="color: #595959;font-size: 25px;"><a href="{{ path('home', { locale: 'en' }) }}">الصفحة الرئيسية</a> / إعادة تعيين كلمة المرور</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- Begin Shine AuroraLogin Register Area -->
    <!-- Begin Shine AuroraLogin Register Area -->
    <div class="hiraola-login-register_area">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-xs-12 col-lg-8 ml-auto mr-auto">
                    {{ form_start(requestForm) }}
                    <div class="login-form text-right">
                        <h4 class="login-title">إعادة تعيين كلمة المرور</h4>
                        <div class="row">
                            <div class="col-md-12 col-12">
                                <label>بريد إلكتروني*</label>
                                {{ form_widget(requestForm.email, {'attr': {'class': 'form-control', 'placeholder':'بريد إلكتروني'}}) }}
                            </div>
                            <div class="col-md-12">
                                <button type="submit" class="hiraola-login_btn">أرسل</button>
                            </div>
                        </div>
                    </div>
                    {{ form_end(requestForm) }}
                </div>
            </div>
        </div>
    </div>
    <!-- Shine AuroraLogin Register Area  End Here -->

{% endblock %}

