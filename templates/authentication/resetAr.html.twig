{% extends 'baseAr.html.twig' %}

{% block body %}

    <!--================login Area =================-->
    <section class="login_area p-t-100 p-b-100">
        <div class="container">
            <div class="login_inner">
                <div class="row justify-content-center">
                    <div class="col-md-4">
                        <div class="login_title">
                            <h2>إعادة تعيين كلمة المرور لحسابك</h2>
                            <p>قم بتسجيل الدخول إلى حسابك لاكتشاف جميع الميزات الرائعة في هذا النموذج.</p>
                        </div>
{#                        {% if error %}#}
{#                            <div class="alert alert-danger">#}
{#                                {{ error.message | trans(error.messageData, 'security') }}#}
{#                            </div>#}
{#                        {% endif %}#}
                        {{ form_start(resetForm, {'attr': {'class': 'login_form row'}}) }}
                            <div class="col-lg-12 form-group">
                                {{ form_row(resetForm.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder':'كلمة مرور جديدة'}}) }}
                            </div>
                        <div class="col-lg-12 form-group">
                            {{ form_row(resetForm.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder':'تأكيد كلمة المرور الجديدة'}}) }}
                        </div>
                            <div class="col-lg-12 form-group">
                                <button type="submit" value="submit" class="btn update_btn w-full">إعادة ضبط</button>
                            </div>
                        {{ form_end(resetForm) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================End login Area =================-->

    <!-- Begin Shine AuroraBreadcrumb Area -->
    <div class="breadcrumb-area" style="background-image: url({{ vich_uploader_asset(banner, 'imageFile') | imagine_filter('Extra_large') }});background-repeat:no-repeat;background-position:center;">
        <div class="container">
            <div class="breadcrumb-content">
                <h2>إعادة تعيين كلمة المرور</h2>
                <ul>
                    <li><a href="{{ path('home', { locale: 'en' }) }}">الصفحة الرئيسية</a></li>
                    <li class="active">إعادة تعيين كلمة المرور</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- Shine AuroraBreadcrumb Area End Here -->
    <!-- Begin Shine AuroraLogin Register Area -->
    <div class="hiraola-login-register_area">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-xs-12 col-lg-8 offset-2">
                    <!-- Login Form s-->
                    {{ form_start(resetForm) }}
                    <div class="login-form">
                        <h4 class="login-title">إعادة تعيين كلمة المرور لحسابك</h4>
                        <div class="row">
                            <div class="col-md-12 col-12">
                                <label>كلمة مرور جديدة</label>
                                {{ form_row(resetForm.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder':'كلمة مرور جديدة'}}) }}
                            </div>
                            <div class="col-12 mb--20">
                                <label>تأكيد كلمة المرور الجديدة</label>
                                {{ form_row(resetForm.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder':'تأكيد كلمة المرور الجديدة'}}) }}
                            </div>
                            <div class="col-md-12">
                                <button type="submit" class="hiraola-login_btn">إعادة ضبط</button>
                            </div>
                        </div>
                    </div>
                    {{ form_end(resetForm) }}
                </div>
            </div>
        </div>
    </div>
    <!-- Shine AuroraLogin Register Area  End Here -->

{% endblock %}

