{% extends 'baseAr.html.twig' %}

{% block body %}

    <!-- Begin Hiraola's Breadcrumb Area -->
    <div class="breadcrumb-area"  style="background-image: url({{ vich_uploader_asset(banner, 'imageFile') | imagine_filter('Extra_large') }});background-repeat:no-repeat;background-position:center;">
        <div class="container">
            <div class="breadcrumb-content">
                <h2>معلومات عنا</h2>
                <ul>
                    <li><a href="{{ path('home', { locale: 'en' }) }}">الصفحة الرئيسية</a></li>
                    <li class="active">معلومات عنا</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- Hiraola's Breadcrumb Area End Here -->

    <!-- Begin Hiraola's About Us Area -->
    <div class="about-us-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-7 d-flex align-items-center">
                    <div class="overview-content text-right">
                        <h2>{{ about.titleAr }}</h2>
                        <p class="short_desc">
                            {% autoescape "html" %}
                                {{ about.descriptionAr|raw }}
                            {% endautoescape %}
                        </p>
                        <div class="hiraola-about-us_btn-area float-right">
                            <a class="about-us_btn" href="{{ about.btnUrl }}">{{ about.btnTitleAr }}</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-5">
                    <div class="overview-img text-center img-hover_effect">
                        <a href="#">
                            <img class="img-full" src="{{ vich_uploader_asset(about, 'imageFile') }}" alt="Shine Aurora About Us Image">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hiraola's About Us Area End Here -->

{% endblock %}

